generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  identity_number String       @id @unique
  username        String       @db.VarChar(200)
  password        String
  name            String
  current_hidp    String?
  household       Household?   @relation(fields: [current_hidp], references: [hidp])
  type            OccupantType @default(TENANT)
}

model Household {
  hidp           String         @id
  monthly_usages MonthlyUsage[]

  occupants User[]
}

model MonthlyUsage {
  id                Int       @id @default(autoincrement())
  total_energy_bill Float     @default(0)
  electric_kWh      Float     @default(0)
  gas_kWh           Float     @default(0)
  household_id      String
  date              DateTime
  household         Household @relation(fields: [household_id], references: [hidp])
  Reward            Reward[]
}

model Reward {
  id               Int          @id @default(autoincrement())
  status           Status       @default(PENDING)
  expired_date     DateTime
  monthly_usage_id Int
  total_saving     Int
  monthly_usage    MonthlyUsage @relation(fields: [monthly_usage_id], references: [id])
}

model RankReward {
  id           Int      @id @default(autoincrement())
  user_id      String
  granted_date DateTime
  rankPlace    Int
}

enum Status {
  PENDING
  EXPIRED
  CLAIMED
}

enum OccupantType {
  LANDLORD
  TENANT
}
